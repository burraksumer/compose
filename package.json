{
  "name": "compose",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "better-auth": "^1.4.9",
      "ai": "^6.0.3",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22",
      "@polar-sh/better-auth": "^1.6.4"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "dev:server": "bun run --filter server dev",
    "db:push": "bun run --filter @compose/db db:push",
    "db:studio": "bun run --filter @compose/db db:studio",
    "db:generate": "bun run --filter @compose/db db:generate",
    "db:migrate": "bun run --filter @compose/db db:migrate",
    "db:local": "bun run --filter @compose/db db:local",
    "check": "oxlint && oxfmt --write"
  },
  "dependencies": {
    "@compose/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@compose/config": "workspace:*",
    "@types/bun": "catalog:",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.2"
}
